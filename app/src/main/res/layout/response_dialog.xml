<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/root"
    android:layout_margin="8dp"
    android:padding="12dp">

    <TextView
        android:id="@+id/dialog_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/tele_blue"
        android:text="How was the Run?"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_margin="8dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/awesome_run"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="13sp"
            android:text="Awesome!"
            android:layout_margin="6dp"
            android:textAllCaps="false"
            android:minHeight="30dp"
            android:textColor="@android:color/white" />
        <Button
            android:id="@+id/pretty_good"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="13sp"
            android:text="Pretty Good"
            android:layout_margin="6dp"
            android:minHeight="30dp"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp">
        <Button
            android:id="@+id/alright_run"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="13sp"
            android:text="It was alright"
            android:layout_margin="6dp"
            android:minHeight="30dp"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />
        <Button
            android:id="@+id/hard_run"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="13sp"
            android:text="That was hard"
            android:layout_margin="6dp"
            android:minHeight="30dp"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="8dp"/>


</LinearLayout>